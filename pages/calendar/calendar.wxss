/* pages/calendar/calendar.wxss */

/* 基础配色 */
.calendar-page {
  --primary: #2b8cee;
  --bg-l: #f6f7f8;
  --text-main: #0d141b;
  --text-sec: #64748b;
  --border: #e2e8f0;
  
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-l);
  color: var(--text-main);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  overflow: hidden;
}

/* Material Icons 模拟 */
@font-face {
  font-family: 'Material Icons';
  font-style: normal;
  font-weight: 400;
  src: url(https://fonts.gstatic.com/s/materialicons/v140/flUhRq6tzZclQEJ-Vdg-IuiaDsNc.woff2) format('woff2');
}

.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 24px;
  line-height: 1;
  letter-spacing: normal;
  text-transform: none;
  display: inline-block;
  white-space: nowrap;
  word-wrap: normal;
  direction: ltr;
  -webkit-font-smoothing: antialiased;
}

/* 顶部导航内容 */
.nav-left, .nav-right {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 100%;
}

/* 家人选择器 */
.family-header {
  background-color: var(--bg-l);
  padding: 20rpx 30rpx 10rpx 30rpx;
  overflow-x: auto;
}

.family-list {
  display: flex;
  gap: 40rpx;
}

.family-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  flex-shrink: 0;
  opacity: 0.4;
  transition: opacity 0.3s;
}

.family-item.active {
  opacity: 1;
}

.avatar-ring {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  padding: 4rpx;
  background: transparent;
}

.active .avatar-ring {
  box-shadow: 0 0 0 4rpx var(--primary);
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #e2e8f0;
}

.add-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #e2e8f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-sec);
}

.family-name {
  font-size: 22rpx;
  font-weight: 500;
}

.active .family-name {
  color: var(--primary);
  font-weight: bold;
}

/* 主滚动区域 */
.main-scroll {
  flex: 1;
  box-sizing: border-box;
}

/* 日历卡片 */
.calendar-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 30rpx;
  margin: 10rpx 30rpx 30rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  border: 1rpx solid var(--border);
}

.calendar-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.current-month {
  font-size: 28rpx;
  font-weight: bold;
}

.nav-btn {
  padding: 10rpx;
  color: var(--text-sec);
}

.weekday-header {
  display: flex;
  text-align: center;
  color: #94a3b8;
  font-size: 20rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.weekday-header text {
  flex: 1;
}

.days-grid {
  display: flex;
  flex-wrap: wrap;
}

.day-cell {
  width: 14.28%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
  position: relative;
}

.day-cell.other-month {
  color: #cbd5e1;
  opacity: 0.5;
}

.day-content {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  position: relative;
}

.day-content.today {
  background-color: var(--primary);
  color: #fff;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(43, 140, 238, 0.2);
}

.day-content.selected:not(.today) {
  background-color: rgba(43, 140, 238, 0.1);
  color: var(--primary);
}

.event-dot {
  position: absolute;
  bottom: 6rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: var(--primary);
  border-radius: 50%;
}

.today .event-dot {
  background-color: #fff;
}

/* 任务列表 */
.tasks-section {
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.section-date {
  font-size: 20rpx;
  color: #94a3b8;
  text-transform: uppercase;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  border: 1rpx solid var(--border);
}

.task-time-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-right: 24rpx;
  border-right: 1rpx solid var(--border);
  min-width: 100rpx;
}

.task-time {
  font-size: 20rpx;
  color: #94a3b8;
}

.task-label {
  font-size: 20rpx;
  color: var(--primary);
  font-weight: bold;
}

.task-info {
  flex: 1;
}

.task-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.task-desc {
  font-size: 22rpx;
  color: var(--text-sec);
}

.task-check {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 4rpx solid var(--primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--primary);
}

.task-check.checked {
  background-color: var(--primary);
  color: #fff;
}

/* 温馨提醒卡片 */
.remind-card {
  background: rgba(43, 140, 238, 0.05);
  border: 1rpx solid rgba(43, 140, 238, 0.1);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.remind-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: var(--primary);
  margin-bottom: 4rpx;
}

.remind-text {
  font-size: 22rpx;
  color: var(--text-sec);
}

.remind-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: var(--primary);
}

/* 底部导航 */
.tab-bar {
  height: 120rpx;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(10px);
  border-top: 1rpx solid var(--border);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  color: #94a3b8;
}

.tab-item.active {
  color: var(--primary);
}

.tab-text {
  font-size: 20rpx;
}

.tab-add {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -40rpx;
}

.add-circle {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: var(--primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(43, 140, 238, 0.3);
  margin-bottom: 8rpx;
}

.fill {
  font-variation-settings: 'FILL' 1;
}

.safe-bottom-placeholder {
  height: 160rpx;
}
