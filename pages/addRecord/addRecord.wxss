/* pages/addRecord/addRecord.wxss */
page {
  background-color: #f6f8f6;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Ensure modal covers entire screen */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  z-index: 9999;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  animation: fadeIn 0.3s ease;
}

.add-record-page {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* Nav Styles */
.nav {
  padding: 0 32rpx;
  background-color: #f6f8f6;
}

.tab-list {
  display: flex;
  border-bottom: 1rpx solid #e1e8e1;
}

.tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #0f172a;
}

.tab-text.inactive {
  color: rgba(5, 150, 105, 0.5);
}

.active-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background-color: #13ec5b;
}

/* Main Content */
.main-content {
  flex: 1;
  padding: 48rpx 32rpx 200rpx;
}

/* Record Time Styling */
.time-picker-card {
  margin-bottom: 48rpx;
  background: #ffffff;
  padding: 32rpx 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: transform 0.1s;
}

.time-picker-card:active {
  transform: scale(0.98);
}

.time-label-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.time-calendar-icon {
  font-size: 36rpx;
}

.time-label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #047857;
}

.time-value-group {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.time-value-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #059669;
}

.time-dropdown-icon {
  font-size: 20rpx;
  color: #059669;
  opacity: 0.5;
}

/* Weight Section */
.weight-section {
  margin-bottom: 64rpx;
}

.weight-card {
  background: #ffffff;
  border-radius: 48rpx;
  padding: 64rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(19, 236, 91, 0.08);
  border: 2rpx solid rgba(19, 236, 91, 0.1);
}

.weight-subtitle {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 600;
  margin-bottom: 40rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.weight-display-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.weight-value-row {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
  position: relative;
  width: 100%;
}

.weight-input {
  font-size: 140rpx;
  font-weight: 800;
  color: #13ec5b;
  text-align: center;
  width: 300rpx;
  height: 160rpx;
  line-height: 160rpx;
  border-bottom: 4rpx solid #13ec5b;
  margin-bottom: 10rpx;
}

.weight-input::placeholder {
  color: #e2e8f0;
}

.weight-unit {
  font-size: 40rpx;
  font-weight: 700;
  color: #64748b;
  margin-bottom: 20rpx;
}

.weight-input-tip {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 10rpx;
}

/* Symptoms Section */
.symptoms-section {
  margin-bottom: 64rpx;
}

.section-header-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.section-subtitle {
  font-size: 22rpx;
  font-weight: 500;
  color: #94a3b8;
}

.symptom-grid {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}

.symptom-col {
  width: 33.33%;
  padding: 0 10rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.symptom-item {
  width: 100%;
  background: #ffffff;
  border: 4rpx solid transparent;
  border-radius: 40rpx;
  padding: 28rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  box-sizing: border-box;
}

.symptom-item.selected {
  background: #ffffff;
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.symptom-item.selected.border-primary { border-color: #13ec5b; }
.symptom-item.selected.border-orange { border-color: #fb923c; }
.symptom-item.selected.border-blue { border-color: #60a5fa; }
.symptom-item.selected.border-red { border-color: #f87171; }
.symptom-item.selected.border-purple { border-color: #c084fc; }
.symptom-item.selected.border-slate { border-color: #94a3b8; }

.symptom-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.bg-primary { background-color: rgba(19, 236, 91, 0.08); }
.bg-orange { background-color: rgba(251, 146, 60, 0.08); }
.bg-blue { background-color: rgba(96, 165, 250, 0.08); }
.bg-red { background-color: rgba(248, 113, 113, 0.08); }
.bg-purple { background-color: rgba(192, 132, 252, 0.08); }
.bg-slate { background-color: rgba(148, 163, 184, 0.08); }

.symptom-icon-wrapper.selected {
  transform: scale(1.1);
}

.symptom-icon {
  font-size: 48rpx;
}

.symptom-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #64748b;
}

.symptom-name.selected {
  color: #1e293b;
  font-weight: bold;
}

/* Notes Section */
.notes-section {
  background: #ffffff;
  border-radius: 40rpx;
  padding: 40rpx;
  margin-bottom: 100rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.notes-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.notes-input {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  color: #334155;
  background-color: #f8fafc;
  padding: 32rpx;
  border-radius: 24rpx;
  box-sizing: border-box;
}

/* Footer */
.footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 48rpx 32rpx 80rpx;
  background: linear-gradient(to top, #f6f8f6 80%, rgba(246, 248, 246, 0));
  z-index: 10;
}

.save-btn {
  width: 100% !important;
  background-color: #13ec5b !important;
  color: #0d1b12 !important;
  font-weight: bold !important;
  font-size: 36rpx !important;
  padding: 32rpx 0 !important;
  border-radius: 32rpx !important;
  box-shadow: 0 20rpx 40rpx rgba(19, 236, 91, 0.3) !important;
  border: none !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.bottom-bar {
  width: 128rpx;
  height: 8rpx;
  background-color: rgba(0, 0, 0, 0.05);
  margin: 48rpx auto 0;
  border-radius: 100rpx;
}
