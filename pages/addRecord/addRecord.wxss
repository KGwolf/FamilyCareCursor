/* pages/addRecord/addRecord.wxss */
page {
  background-color: #f6f8f6;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.add-record-page {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* Nav Styles */
.nav {
  padding: 0 32rpx;
  background-color: #f6f8f6;
}

.tab-list {
  display: flex;
  border-bottom: 1rpx solid #e1e8e1;
}

.tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #0f172a;
}

.tab-text.inactive {
  color: rgba(5, 150, 105, 0.5);
}

.active-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background-color: #13ec5b;
}

/* Main Content */
.main-content {
  flex: 1;
  padding: 48rpx 32rpx 200rpx;
}

/* Record Time Styling */
.time-picker-card {
  margin-bottom: 48rpx;
  background: #ffffff;
  padding: 32rpx 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: transform 0.1s;
}

.time-picker-card:active {
  transform: scale(0.98);
}

.time-label-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.time-calendar-icon {
  font-size: 36rpx;
}

.time-label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #047857;
}

.time-value-group {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.time-value-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #059669;
}

.time-dropdown-icon {
  font-size: 20rpx;
  color: #059669;
  opacity: 0.5;
}

/* Weight Section */
.weight-section {
  margin-bottom: 64rpx;
}

.weight-card {
  background: rgba(19, 236, 91, 0.05);
  border: 1rpx solid rgba(19, 236, 91, 0.2);
  border-radius: 64rpx;
  padding: 80rpx 64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.weight-subtitle {
  font-size: 24rpx;
  color: #059669;
  font-weight: 500;
  letter-spacing: 4rpx;
  margin-bottom: 24rpx;
  text-transform: uppercase;
  opacity: 0.8;
}

.weight-value-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.weight-value {
  font-size: 110rpx;
  font-weight: bold;
  color: #0f172a;
  letter-spacing: -2rpx;
}

.weight-unit {
  font-size: 40rpx;
  font-weight: bold;
  color: #13ec5b;
}

.edit-btn {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  padding: 10rpx;
}

.icon-edit {
  font-size: 36rpx;
  color: rgba(19, 236, 91, 0.6);
}

.diff-tag {
  margin-top: 40rpx;
  padding: 16rpx 40rpx;
  background-color: #ffffff;
  border-radius: 100rpx;
  border: 1rpx solid rgba(19, 236, 91, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.diff-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #047857;
}

.diff-highlight {
  font-weight: bold;
  color: #13ec5b;
}

/* Notes Section */
.notes-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.notes-label {
  padding-left: 8rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #94a3b8;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.notes-input {
  width: 100%;
  height: 256rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  padding: 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

/* Symptoms Section */
.symptoms-section {
  margin-bottom: 64rpx;
}

.section-header-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #0f172a;
}

.section-subtitle {
  font-size: 20rpx;
  font-weight: 500;
  color: #94a3b8;
}

.symptom-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -12rpx;
}

.symptom-item {
  width: calc(33.33% - 24rpx);
  margin: 12rpx;
  background: #ffffff;
  border: 4rpx solid transparent;
  border-radius: 40rpx;
  padding: 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.02);
  box-sizing: border-box;
}

.symptom-item.selected {
  background: rgba(19, 236, 91, 0.05);
}

.symptom-item.selected.border-primary { border-color: #13ec5b; }
.symptom-item.selected.border-orange { border-color: #fb923c; }
.symptom-item.selected.border-blue { border-color: #60a5fa; }
.symptom-item.selected.border-red { border-color: #f87171; }
.symptom-item.selected.border-purple { border-color: #c084fc; }
.symptom-item.selected.border-slate { border-color: #94a3b8; }

.symptom-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.bg-primary { background-color: #f0fdf4; }
.bg-orange { background-color: #fff7ed; }
.bg-blue { background-color: #eff6ff; }
.bg-red { background-color: #fef2f2; }
.bg-purple { background-color: #faf5ff; }
.bg-slate { background-color: #f8fafc; }

.symptom-icon-wrapper.selected.bg-primary { background-color: #ffffff; color: #13ec5b; box-shadow: 0 4rpx 12rpx rgba(19, 236, 91, 0.1); }
/* Other colors handle similarly if needed, for now use white bg for all selected */
.symptom-icon-wrapper.selected { background-color: #ffffff !important; }

.symptom-icon {
  font-size: 48rpx;
}

.symptom-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #64748b;
  opacity: 0.7;
}

.symptom-name.selected {
  color: #0f172a;
  font-weight: bold;
  opacity: 1;
}

/* Footer */
.footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 48rpx 32rpx 80rpx;
  background: linear-gradient(to top, #f6f8f6 80%, rgba(246, 248, 246, 0));
  z-index: 10;
}

.save-btn {
  width: 100% !important;
  background-color: #13ec5b !important;
  color: #0d1b12 !important;
  font-weight: bold !important;
  font-size: 36rpx !important;
  padding: 32rpx 0 !important;
  border-radius: 32rpx !important;
  box-shadow: 0 20rpx 40rpx rgba(19, 236, 91, 0.3) !important;
  border: none !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.bottom-bar {
  width: 128rpx;
  height: 8rpx;
  background-color: rgba(0, 0, 0, 0.05);
  margin: 48rpx auto 0;
  border-radius: 100rpx;
}
