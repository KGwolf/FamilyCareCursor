/* pages/addReminder/addReminder.wxss */

/* Page 根元素 */
page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f9fafb;
}

/* Page Container */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  font-family: 'Lexend', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', sans-serif;
  box-sizing: border-box;
  overflow: hidden;
}

/* Main Content */
.main-content {
  flex: 1;
  padding: 32rpx;
  padding-bottom: 240rpx;
  min-height: 0;
}

/* 当前对象卡片 */
.target-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid #f3f4f6;
  margin-bottom: 24rpx;
}

.target-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.target-avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(34, 197, 94, 0.1);
}

.target-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.target-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.target-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.target-badge {
  background-color: rgba(34, 197, 94, 0.1);
  color: #22c55e;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
  font-weight: 700;
}

.target-desc {
  color: #6b7280;
  font-size: 26rpx;
}

.switch-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
}

.switch-icon {
  font-size: 28rpx;
}

.switch-text {
  color: #22c55e;
  font-size: 28rpx;
  font-weight: 600;
}

/* 提示信息 */
.tip-banner {
  background-color: rgba(34, 197, 94, 0.05);
  padding: 24rpx;
  border-radius: 32rpx;
  text-align: center;
  margin-bottom: 48rpx;
}

.tip-banner text {
  color: #4b5563;
  font-size: 28rpx;
  font-weight: 500;
}

/* Form Section */
.form-section {
  margin-bottom: 48rpx;
}

.section-label {
  display: block;
  font-size: 26rpx;
  font-weight: 700;
  color: #374151;
  margin-bottom: 16rpx;
}

/* 提醒类型选择器 */
.type-selector {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid #f3f4f6;
}

.type-icon {
  font-size: 40rpx;
  color: #22c55e;
}

.type-text {
  flex: 1;
  font-size: 32rpx;
  color: #111827;
}

.type-arrow {
  font-size: 36rpx;
  color: #d1d5db;
}

/* 时间选择网格 */
.time-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.time-card {
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 48rpx;
  border: 2rpx solid #f3f4f6;
  text-align: center;
}

.time-label {
  display: block;
  color: #9ca3af;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.time-value {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.time-icon {
  font-size: 36rpx;
}

.time-text {
  color: #22c55e;
  font-size: 44rpx;
  font-weight: 700;
}

.freq-value {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.freq-icon {
  font-size: 32rpx;
}

.freq-text {
  color: #374151;
  font-size: 30rpx;
  font-weight: 700;
}

/* 频率按钮组 */
.freq-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.freq-btn {
  padding: 16rpx 32rpx;
  background-color: #ffffff;
  border: 2rpx solid #f3f4f6;
  border-radius: 100rpx;
  font-size: 24rpx;
  color: #6b7280;
  transition: all 0.2s ease;
}

.freq-btn-active {
  background-color: #22c55e;
  color: #ffffff;
  font-weight: 700;
  border-color: #22c55e;
}

/* 备注输入 */
.remark-input {
  width: 100%;
  min-height: 200rpx;
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 48rpx;
  border: 2rpx solid #f3f4f6;
  font-size: 30rpx;
  color: #111827;
  box-sizing: border-box;
  line-height: 1.6;
}

.remark-input::placeholder {
  color: #9ca3af;
}

/* Footer */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 48rpx;
  background: linear-gradient(to top, #f9fafb 60%, rgba(249, 250, 251, 0.9) 80%, transparent);
  box-sizing: border-box;
}

.submit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  width: 100%;
  padding: 32rpx 0;
  background-color: #22c55e;
  border-radius: 48rpx;
  box-shadow: 0 16rpx 48rpx rgba(34, 197, 94, 0.3);
  transition: all 0.2s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  background-color: #16a34a;
}

.submit-icon {
  font-size: 36rpx;
}

.submit-text {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 700;
}
