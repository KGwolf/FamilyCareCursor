/* pages/home/home.wxss */

/* Page Container */
.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f9fafb;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', sans-serif;
  color: #111827;
  padding-bottom: 64rpx;
}

/* Header */
.header {
  position: sticky;
  top: 0;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12px);
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.patient-selector {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background-color: #f9fafb;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  border: 1rpx solid rgba(229, 231, 235, 0.5);
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.patient-info {
  display: flex;
  flex-direction: column;
}

.patient-name-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.patient-name {
  font-size: 28rpx;
  font-weight: 700;
}

.dropdown-arrow {
  font-size: 20rpx;
  color: #9ca3af;
}

.switch-hint {
  font-size: 18rpx;
  color: #2563eb;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: -0.5rpx;
}

.notification-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: #eff6ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

/* Navigation Tabs */
.nav-tabs {
  display: flex;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  background-color: #fff;
  gap: 48rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.tab-item {
  padding: 24rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  color: #9ca3af;
  flex-shrink: 0;
}

.tab-active {
  font-weight: 700;
  color: #2563eb;
  border-bottom: 4rpx solid #2563eb;
}

/* Main Content */
.main-content {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* Tasks Header */
.tasks-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 16rpx 0;
}

.tasks-title-section {
  display: flex;
  flex-direction: column;
}

.tasks-title {
  font-size: 40rpx;
  font-weight: 800;
}

.tasks-date {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.tasks-progress-section {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.progress-text {
  font-size: 24rpx;
  color: #2563eb;
  font-weight: 700;
}

.progress-bar {
  width: 128rpx;
  height: 12rpx;
  background-color: #e5e7eb;
  border-radius: 100rpx;
  margin-top: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #2563eb;
  border-radius: 100rpx;
  transition: width 0.3s ease;
}

/* Task Cards */
.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-card {
  display: flex;
  align-items: center;
  gap: 32rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.task-completed {
  background-color: rgba(240, 253, 244, 0.5);
  border: 1rpx solid rgba(34, 197, 94, 0.1);
}

.task-important {
  border: 4rpx solid rgba(37, 99, 235, 0.2);
}

.important-badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: rgba(37, 99, 235, 0.1);
  padding: 8rpx 24rpx;
  border-bottom-left-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 700;
  color: #2563eb;
}

.task-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.icon-completed {
  background-color: #fff !important;
}

.icon-bg-white {
  background-color: #fff;
}

.icon-bg-sky {
  background-color: #e0f2fe;
}

.icon-bg-amber {
  background-color: #fef3c7;
}

.icon-bg-purple {
  background-color: #f3e8ff;
}

.task-icon {
  font-size: 40rpx;
}

.task-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.task-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.title-completed {
  font-weight: 500;
  color: #9ca3af;
  text-decoration: line-through;
}

.task-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  display: flex;
  align-items: center;
}

.subtitle-success {
  color: #22c55e;
  font-weight: 700;
}

.subtitle-note {
  color: #9ca3af;
  font-weight: 400;
}

.task-status {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-completed {
  background-color: #22c55e;
}

.status-pending {
  border: 4rpx solid #d1d5db;
  background-color: transparent;
}

.check-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: 700;
}

/* Motivation Card */
.motivation-card {
  margin-top: 24rpx;
  padding: 48rpx;
  background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
  border-radius: 48rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(37, 99, 235, 0.3);
}

.motivation-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.motivation-title {
  font-size: 36rpx;
  font-weight: 700;
}

.motivation-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

.motivation-btn {
  display: inline-block;
  width: fit-content;
  padding: 16rpx 40rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 100rpx;
  font-size: 28rpx;
  font-weight: 700;
  backdrop-filter: blur(8px);
}

.motivation-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.motivation-bg-circle {
  position: absolute;
  bottom: -64rpx;
  right: -64rpx;
  width: 256rpx;
  height: 256rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  filter: blur(40rpx);
}
