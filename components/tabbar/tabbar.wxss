/* components/tabbar/tabbar.wxss */

.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-top: 1rpx solid #f3f0e7;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 50;
  transition: all 0.3s ease;
}

/* 暗色模式 */
.tabbar.dark {
  background: rgba(34, 29, 16, 0.95);
  border-top: 1rpx solid #3d3624;
}

.tabbar-inner {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 112rpx; /* 14 * 8 */
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #9ca3af; /* text-gray-400 */
  position: relative;
}

.icon-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
}

.icon-svg {
  width: 24px;
  height: 24px;
  fill: currentColor;
  transition: fill 0.2s ease;
}

.tab-item.active {
  color: #2563eb; /* text-primary */
}

.tab-item.active .label {
  font-weight: bold;
}

.label {
  font-size: 20rpx; /* text-[10px] */
  margin-top: 4rpx; /* mt-0.5 */
  font-weight: 500;
}

/* 中间大按钮样式 */
.add-tab {
  overflow: visible;
}

.add-button-wrap {
  position: absolute;
  top: -48rpx; /* -top-6 * 8 */
  width: 96rpx; /* w-12 * 8 */
  height: 96rpx;
  background: #2563eb; /* bg-primary */
  border-radius: 50%;
  box-shadow: 0 10rpx 20rpx rgba(37, 99, 235, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 8rpx solid #f8f8f6; /* ring-4 */
}

.dark .add-button-wrap {
  border-color: #221d10; /* ring-background-dark */
}

.add-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.mt-record {
  margin-top: 56rpx; /* mt-7 * 8 */
}

