<!-- components/tabbar/tabbar.wxml -->
<view class="tabbar {{isDark ? 'dark' : ''}}">
  <view class="tabbar-inner">
    <!-- 首页 -->
    <view class="tab-item {{activeTab === 'home' ? 'active' : ''}}" bindtap="onTabChange" data-tab="home" data-url="/pages/home/home">
      <view class="icon-container">
        <svg class="icon-svg" viewBox="0 0 24 24">
          <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
        </svg>
      </view>
      <text class="label">首页</text>
    </view>

    <!-- 日程 -->
    <view class="tab-item {{activeTab === 'calendar' ? 'active' : ''}}" bindtap="onTabChange" data-tab="calendar" data-url="/pages/calendar/calendar">
      <view class="icon-container">
        <svg class="icon-svg" viewBox="0 0 24 24">
          <path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zm0-12H5V6h14v2z"/>
        </svg>
      </view>
      <text class="label">日程</text>
    </view>

    <!-- 记录 (中心大按钮) -->
    <view class="tab-item add-tab" bindtap="onTabChange" data-tab="add" data-url="/pages/addRecord/addRecord">
      <view class="add-button-wrap">
        <view class="add-button">
          <svg class="icon-svg" style="width: 28px; height: 28px; fill: white;" viewBox="0 0 24 24">
            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
          </svg>
        </view>
      </view>
      <text class="label mt-record">记录</text>
    </view>

    <!-- 档案 -->
    <view class="tab-item {{activeTab === 'records' ? 'active' : ''}}" bindtap="onTabChange" data-tab="records" data-url="/pages/records/records">
      <view class="icon-container">
        <svg class="icon-svg" viewBox="0 0 24 24">
          <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
        </svg>
      </view>
      <text class="label">档案</text>
    </view>

    <!-- 设置 -->
    <view class="tab-item {{activeTab === 'settings' ? 'active' : ''}}" bindtap="onTabChange" data-tab="settings" data-url="/pages/settings/settings">
      <view class="icon-container">
        <svg class="icon-svg {{activeTab === 'settings' ? 'filled' : ''}}" viewBox="0 0 24 24">
          <path d="M19.14 12.94c.04-.3.06-.61.06-.94 0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.05.3-.09.63-.09.94s.02.64.07.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.21.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z"/>
        </svg>
      </view>
      <text class="label">设置</text>
    </view>
  </view>
</view>